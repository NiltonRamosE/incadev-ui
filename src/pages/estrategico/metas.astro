---
import ProtectedLayout from "@/layouts/ProtectedLayout.astro";
// Asegúrate de importar el nombre correcto del componente
import { QualityStandardsWidget } from "@/process/strategic/components/goals/QualityStandardsWidget";
---

<ProtectedLayout title="Estándares de Calidad | Grupo 05">
  <div class="container mx-auto py-8 px-4 max-w-7xl">
    
    <!-- Encabezado -->
    <div class="mb-8 space-y-2">
      <h1 class="text-3xl font-bold text-gray-900 tracking-tight">
        Evaluación de Calidad
      </h1>
      <p class="text-gray-500 max-w-2xl">
        Ayúdanos a mejorar. Califica el cumplimiento de nuestros estándares de calidad y acreditación. Tu voto es anónimo.
      </p>
    </div>

    <!-- Widget de React (Cliente) -->
    <section>
      <QualityStandardsWidget client:load />
    </section>

  </div>
</ProtectedLayout>